<?xml version="1.0" ?>
<project name="Terrain Generator" >
	<assets>
	
		<scenes>
			<scene name="MyScene" param="UNITIZE SWAP_YZ">
				<file name="models/file.obj"/>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<NEAR value= 0.001/>
				<FAR value= 1000/>
				<POSITION x=0 y=2 z=-1 />
				<VIEW x=0 y=-2 z=1 />
			</camera>
		</cameras>

		<lights>
			<light name="Sun">
				<DIRECTION x=-2 y=-1 z=-2 />
			</light>
		</lights>

		<materialLibs>
			<materialLib filename="withModelM.mlib" />
		</materialLibs>
		
	</assets>
	
    	<pipelines>
		<pipeline name="lighting" default="true">
			<pass class="default" name="pass1">
				<scenes>
					<scene name="MyScene" />				
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<injectionMaps>
					<map toMaterial="*">
						<shader fromMaterial ="withModel" fromLibrary="withModelM" />
					</map>
				</injectionMaps>
			</pass>
		</pipeline>
	</pipelines>

</project>